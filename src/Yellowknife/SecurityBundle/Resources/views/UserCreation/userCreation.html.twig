{% form_theme form 'bootstrap_3_layout.html.twig' %}
{% block body -%}
    {{ form_start(form) }} 
    <div class="row">
        <div class="col-lg-2">
            {{ form_widget(form.name) }} 
        </div>
        <div class="col-lg-3">
            {{ form_widget(form.surname) }} 
        </div>
        <div class="col-lg-3">
            {{ form_widget(form.email) }} 
        </div>
        <div class="col-lg-2">
            {{ form_widget(form.locale) }} 
        </div>    
        <div class="col-lg-2">
            <button class="btn btn-success btn-md" type="submit">{% trans %} Add new user {% endtrans %}</button>
        </div>
    </div>
            {{ form_end(form) }} 
{% endblock %}
