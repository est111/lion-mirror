{% form_theme form 'bootstrap_3_layout.html.twig' %}
{% block body -%}
    <div class="row">
        <div class="col-lg-3">
            {{ form(form.name) }} 
        </div>
        <div class="col-lg-4">
            {{ form(form.surname) }} 
        </div>
        <div class="col-lg-3">
            {{ form(form.email) }} 
        </div>
        <div class="col-lg-2">
            {{ form(form.locale) }} 
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <button class="btn btn-success btn-lg pull-right" type="submit">{% trans %} Add new user {% endtrans %}</button>
        </div>
    </div>
{% endblock %}
