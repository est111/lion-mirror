{% extends '::base.html.twig' %}

{% block body -%}
    <div class="container">
        <div class="row">
            <div class="col-lg-12 bg-danger">
                <table class="table table-condensed">
                    <tbody>
                        <tr>
                            <th>Id</th>
                            <td>{{ entity.id }}</td>
                        </tr>
                        <tr>
                            <th>Username</th>
                            <td>{{ entity.username }}</td>
                        </tr>
                        <tr>
                            <th>Password</th>
                            <td>{{ entity.password }}</td>
                        </tr>
                        <tr>
                            <th>Email</th>
                            <td>{{ entity.email }}</td>
                        </tr>
                        <tr>
                            <th>Locale</th>
                            <td>{{ entity.locale }}</td>
                        </tr>
                        <tr>
                            <th>Isactive</th>
                            <td>{{ entity.isActive }}</td>
                        </tr>
                    </tbody>
                </table>

                <ul class="record_actions">
                    <li>
                        <a href="{{ path('admin_user') }}">
                            Back to the list
                        </a>
                    </li>
                    <li>
                        <a href="{{ path('admin_user_edit', { 'id': entity.id }) }}">
                            Edit
                        </a>
                    </li>
                    <li>{{ form(delete_form) }}</li>
                </ul>

            </div>
        </div>
    </div>
{% endblock %}
