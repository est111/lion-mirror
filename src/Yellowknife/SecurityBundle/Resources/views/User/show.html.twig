{% extends '::base.html.twig' %}

{% block body -%}
    <div class="container-fluid bg-danger">
        <div class="row">
            <div class="col-lg-12">
              
                            {{ entity.id }}
                    
                           {{ entity.username }}
               
                            {{ entity.password }}
                
                            {{ entity.email }}
        
                            {{ entity.locale }}
          
                            {{ entity.isActive }}
    
                <ul class="record_actions">
                    <li>
                        <a href="{{ path('admin_user') }}">
                            Back to the list
                        </a>
                    </li>
                    <li>
                        <a href="{{ path('admin_user_edit', { 'id': entity.id }) }}">
                            Edit
                        </a>
                    </li>
                    <li>{{ form(delete_form) }}</li>
                </ul>

            </div>
        </div>
    </div>
{% endblock %}
