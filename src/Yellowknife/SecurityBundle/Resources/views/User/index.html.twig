{% extends '::base.html.twig' %}

{% block body -%}
    <div class="container"> 
        <div class="row"> 
            <div class="col-lg-12"> 
                <div class="panel panel-danger">
                    <div class="panel-heading">
                        <strong>Poniższa lista zawiera wszystkich użytkowników: </strong>
                    </div>
                          <div class="panel-table"> 
                        <table class="table table-bordered table-condensed">
                            <thead>
                                <tr>
                                    <th>Id</th>
                                    <th>Username</th>
                                    <th>Password</th>
                                    <th>Email</th>
                                    <th>{% trans %}Language{% endtrans %}</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody class="panel-group" id="accordion" role="tablist" aria-multiselectable="true">
                                {% for entity in entities %}
                                    <tr role="tab" id="heading-{{ entity.id }}">
                                        <td><a href="{{ path('admin_user_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                                        <td>{{ entity.username }}</td>
                                        <td><a class="btn btn-danger btn-xs" href="{{ path('admin_user_creation_resetpassword', { 'id': entity.id }) }}">{% trans %}Change password{% endtrans %}</a>  <b class="label label-warning">{{ entity.passwordChangedAt|date('Y-m-d H:i') }}</b></td>
                                        <td><a href="mailto:{{ entity.email }}" class="btn btn-info btn-xs"><i class="glyphicon glyphicon-send"></i>&nbsp;&nbsp;&nbsp;m@il </a></td>
                                        <td><b class="badge badge-success">{{ entity.locale }}</b></td>
                                        <td>
                                            <a class="btn btn-default btn-xs"
                                            data-parent="#accordion"      
                                            data-toggle="collapse" 
                                            href="#user-{{ entity.id }}" 
                                            aria-expanded="false" 
                                            aria-controls="user-{{ entity.id }}"
                                            ><i class="glyphicon glyphicon-expand"></i> expand</a>
                                            <a class="btn btn-primary btn-xs" href="{{ path('admin_user_edit', { 'id': entity.id }) }}"><i class="glyphicon glyphicon-pencil"></i> edit</a>
                                        </td>
                                    </tr>
                                    <tr class="collapse" id="user-{{ entity.id }}" role="tabpanel" aria-labelledby="heading-{{ entity.id }}">
                                        <td colspan="6">
                                            {{ render(path('admin_user_show', { 'id': entity.id })) }}
                                        </td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>

                    </div>
                    <div class="panel-body bg-danger"> 
                        <p class="text-danger text-justify">
                            <strong>Dodaj użytkownika:</strong>
                        </p>
                    </div>
                    <div class="panel-footer bg-danger">
                        {{ render(url('admin_user_creation'))}}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
