{% extends '::base.html.twig' %}

{% block body -%}
    {% set callregister = app.session.get('callregister') %}
    {% set callregister_flag = 1 %}
    <div class="panel panel-info">
        <div class="panel-heading">
            <strong>{% trans %}Customers who called from same source {% endtrans %}  {{entity.callregister|default('')}}</strong>
        </div>
        <div class="panel-body">
            <table class="table table-condensed">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Name</th>
                        <th>Contakt</th>                        
                        <th>Address</th>
                    </tr>
                </thead>
                <tbody>
                    {% for entity in entities %}
                        <tr {% if callregister.id==entity.callregister.id %} {% set callregister_flag = 0 %} class="bg-success" {% endif %}>
                            <td class="col-lg-1">{{ entity.id }} ({{ entity.callregister.id|default('null') }})
                                <a class="btn btn-xs btn-primary btn-block" href="{{ path('admin_customer_edit', { 'id': entity.id }) }}">
                                    <i class="glyphicon glyphicon-edit"></i>
                                </a>

                            </td>
                            <td class="col-lg-4">{{ entity.firstname }} {{ entity.fathername }} {{ entity.lastname }}</td>
                            <td class="col-lg-3">
                                <i class="glyphicon glyphicon-earphone"></i> {{ entity.phonenumber }}<br/>
                                <strong>@</strong> {{ entity.email }}
                            </td>
                            <td class="col-lg-4">
                                {% for address in entity.address %}
                                    <div class="btn-group btn-group-xs" role="group"/>
                                        <a class="btn btn-default" href="{{ path('admin_customer_edit', { 'id': entity.id }) }}">
                                            <br/>
                                            <i class="glyphicon glyphicon-edit"></i>
                                        </a>
                                        <button class='btn btn-info'>
                                            {{ address.postcode }}, {{ address.city }},{{ address.country|country(app.request.locale) }}<br/>
                                            <small>Nizinna 12/A2</small>
                                        </button>  
                                    </div>
                                            <br/>
                                            <br/>
                                {% endfor %}
                                <button class="btn btn-success btn-xs">Add new address</button>
                            </td>
                            <td>
                                {#                                <a class="btn btn-xs btn-primary" href="{{ path('admin_customer_show', { 'id': entity.id }) }}">show</a>#}

                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>

        </div>
        {% if callregister_flag %}
            <div class="panel-footer">
                <a href="{{ path('admin_customer_new') }}">
                    Create a new entry
                </a>
            </div>
        {% endif %}
    </div>
{% endblock %}
