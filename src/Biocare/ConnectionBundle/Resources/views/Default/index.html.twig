{% extends '::base.html.twig' %}
{% block body %}
    <div class="container">
        {% if form.source %}
        <div class="row">
            <div class="col-lg-12 well well-sm bg-info">
                <p class="text-danger">
                {% trans %} Klient ukrył numer telefonu. {% endtrans %}
                </p>         
                <p class="text-success">
                    <strong>{% trans %} Poproś klienta, {% endtrans %}</strong>{% trans %} aby podał swój numer telefonu w celu przedstawienia mu  {% endtrans %}
                </p>            
                {{ form(form.source) }}
            </div>
        </div>
        {% endif %}
        <div class="row">
            <div class="col-lg-12">
                {{ form(form.destination) }}
            </div>
        </div>
    </div>
{% endblock %}