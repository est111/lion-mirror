{% extends '::base.html.twig' %}
{% block body %}
    <div class="container">
        {% if form.source %}
        <div class="row">
            <div class="col-lg-12 well well-sm bg-info">
                <p class="text-danger">
                {% trans %} Klient ukrył numer telefonu. {% endtrans %}
                </p>         
                <p class="text-success">
                    <strong class="text-capitalize">{% trans %} KONSULTANT: {% endtrans %}</strong><br/> {% trans %} Proszę aby <strong> podał/a Pan/Pani </strong> swój numer telefonu w celu przedstawienia najlepszej oferty, numer jest potrzebny do złożenia zamówienia i uzyskania pozostałych informacji. {% endtrans %}
                </p>            
                {{ form_widget(form.source) }}
            </div>
        </div>
        {% endif %}
        <div class="row">
            <div class="col-lg-12">
                {{ form(form.destination) }}
            </div>
        </div>
    </div>
{% endblock %}